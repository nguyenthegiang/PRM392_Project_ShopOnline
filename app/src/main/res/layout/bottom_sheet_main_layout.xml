<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RLBottomSheetMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightGreen"
    android:padding="4dp">

    <!--Product name-->
    <TextView
        android:id="@+id/TVProductNameMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:padding="4dp"
        android:text="Product Name"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <!--Product Image-->
    <ImageView
        android:id="@+id/IVProductImageMain"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/TVProductNameMain"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:src="@drawable/ic_launcher_background"/>

    <!--Product Description-->
    <TextView
        android:id="@+id/TVProductDescriptionMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TVProductNameMain"
        android:layout_margin="4dp"
        android:layout_toEndOf="@id/IVProductImageMain"
        android:layout_toRightOf="@id/IVProductImageMain"
        android:padding="3dp"
        android:text="Description"
        android:textColor="@color/white"/>

    <!--Price-->
    <TextView
        android:id="@+id/TVProductPriceMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TVProductDescriptionMain"
        android:layout_margin="4dp"
        android:layout_toRightOf="@id/IVProductImageMain"
        android:padding="3dp"
        android:text="Price"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/IVProductImageMain"
        android:orientation="horizontal"
        android:weightSum="2">

        <!--Button for Add Product to Cart-->
        <Button
            android:id="@+id/btnAddToCartMain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:text="Add to Cart"
            android:textAllCaps="false"/>

        <!--Button for Product Detail-->
        <Button
            android:id="@+id/btnViewDetailMain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:text="View Detail"
            android:textAllCaps="false"/>
    </LinearLayout>

</RelativeLayout>